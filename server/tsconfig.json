{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "target": "ES2020", /* Compile to ES2020 for modern JavaScript support */
    "module": "NodeNext", /* Use NodeNext to support ES modules in Node.js */
    "moduleResolution": "NodeNext", /* Use NodeNext for module resolution */
    "rootDir": "./src", /* Root folder for your source files */
    "outDir": "./dist", /* Output folder for compiled files */
    
    /* Additional Options */
    "esModuleInterop": true, /* Ensures compatibility with CommonJS modules */
    "resolveJsonModule": true, /* Allows importing JSON files */
    "strict": true, /* Enable strict type checking */
    "forceConsistentCasingInFileNames": true, /* Enforce consistent file name casing */
    "skipLibCheck": true /* Skip type checking of declaration files */
  },
  "include": ["src/**/*"]
}
